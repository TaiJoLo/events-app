generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  String?
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model all_events {
  id                String            @id @unique
  title             String
  city              String
  description       String?
  image             String?
  events_categories events_categories @relation(fields: [city], references: [id], onDelete: NoAction, onUpdate: NoAction)
  registration      registration?
}

model events_categories {
  id           String         @id
  title        String?
  description  String?
  image        String?
  all_events   all_events[]
  registration registration[]
}

model registration {
  id                String            @id @db.Uuid
  email             String
  event_id          String            @unique
  city_id           String
  events_categories events_categories @relation(fields: [city_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  all_events        all_events        @relation(fields: [event_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
